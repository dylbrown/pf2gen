<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<?import ui.controls.SkillTab?>
<AnchorPane minHeight="720.0" minWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controllers.Controller">
    <TabPane fx:id="rootTabs" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Tab closable="false" text="Home">
            <fx:include source="infoTab.fxml" />
        </Tab>
        <Tab closable="false" text="Ancestry">
            <fx:include source="abc/ancestryTab.fxml" />
        </Tab>
        <Tab closable="false" text="Background">
            <fx:include source="abc/backgroundTab.fxml" />
        </Tab>
        <Tab closable="false" text="Class">
            <fx:include source="abc/classTab.fxml" />
        </Tab>
        <Tab closable="false" text="Ability Scores">
            <fx:include source="abilityScoreTab.fxml" />
        </Tab>
        <Tab closable="false" text="Skills">
            <SkillTab />
        </Tab>
        <Tab closable="false" text="Decisions">
            <fx:include source="decisionsTab.fxml" />
        </Tab>
        <Tab closable="false" text="Equipment">
            <fx:include source="equip/equipTab.fxml" />
        </Tab>
        <Tab closable="false" text="Spells">
            <fx:include source="spellsTab.fxml" />
        </Tab>
        <Tab fx:id="displayTab" closable="false" text="Display">
            <StackPane>
                <AnchorPane prefHeight="200.0" prefWidth="200.0">
                    <WebView fx:id="display" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                </AnchorPane>
                <Button fx:id="export" alignment="CENTER" mnemonicParsing="false" text="Export" StackPane.alignment="TOP_RIGHT">
                    <StackPane.margin>
                        <Insets right="10.0" top="10.0" />
                    </StackPane.margin>
                </Button>
            </StackPane>
        </Tab>
    </TabPane>
</AnchorPane>
